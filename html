  $("#bt2").on("click",function(){
    console.log("12");
   /* $("#div1").html('<button id="bt1" onclick="count()">start</button><button id="bt2" onclick="clearTimeout(myVar)"disabled="disabled">stop</button>')*/
    $("#bt2").attr("disabled", "disabled");
    $("#bt1").removeAttr("disabled");
