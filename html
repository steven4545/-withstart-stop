function count(){ 
  bar = bar + 1;
  amount =amount + line ;
  document.loading.chart.value=amount ;
  document.loading.percent.value=bar+"%" ;
  


  if (bar<100) 
  {
    myVar=setTimeout(function(){count()},100);
  }
  else 
  {window.location = "tw.yahoo.com";} 
}

